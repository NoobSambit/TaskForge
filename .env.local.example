# Example local environment variables for development
# Copy this file to .env.local and fill in the values.
# Do NOT commit real secrets.

# Database
MONGODB_URI=

# Auth.js / NextAuth (v5)
# Base URL for the app (used by Next.js metadata and some auth flows)
NEXTAUTH_URL=http://localhost:3000
# Auth secret used by NextAuth v5
AUTH_SECRET=
# Optional: If using v5 recommended variable name for base URL
# AUTH_URL=http://localhost:3000

# OAuth providers (leave empty if not used)
# NextAuth v5 expects these env var names:
AUTH_GOOGLE_ID=
AUTH_GOOGLE_SECRET=
AUTH_GITHUB_ID=
AUTH_GITHUB_SECRET=

# AI Provider Configuration
# Choose provider: "gemini" (default) or "ollama"
AI_PROVIDER=gemini
# Enable debug logging for AI operations
AI_DEBUG=false

# Gemini (Google Generative AI) - preferred provider
# Get your API key from: https://makersuite.google.com/app/apikey
GEMINI_API_KEY=

# Ollama - fallback provider (runs locally)
# Install from: https://ollama.ai
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=llama3.2
